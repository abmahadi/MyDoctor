<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".AppoinmentDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Patient Email  :"/>
        <TextView
            android:id="@+id/patientEmailTV_aad"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Mobile No  :"/>
        <TextView
            android:id="@+id/mobilenumberPatient_aad"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content" />

    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:padding="10dp"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Date         :"/>
        <TextView
            android:id="@+id/dateTV_aad"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Time         :"/>
        <TextView
            android:id="@+id/timeTV_aad"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/appoinmentAddBtn"
            android:layout_width="0dp"
            android:layout_weight="1"

            android:text="Add"
            android:textAllCaps="false"
            android:background="@color/colorPrimary"
            android:layout_marginRight="10dp"

            android:layout_height="wrap_content"></Button>
        <Button
            android:id="@+id/appoinmentDeleteBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Delete"
            android:textAllCaps="false"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="10dp"

            android:layout_height="wrap_content"></Button>

    </LinearLayout>


</LinearLayout>