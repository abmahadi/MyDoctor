<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"

    tools:context=".Activity.PatientLoginActivity">
    
    <ImageView
        android:src="@drawable/dr_image"
        android:layout_width="wrap_content"
        android:layout_height="70dp" />
    
    
    <TextView
        android:text="Email"
        android:textColor="@color/mainColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_patientEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#efefef"
        android:drawableLeft="@drawable/ic_user"
        android:drawablePadding="5dp"
        android:hint="Enter Email"
        android:padding="4dp" />

    <TextView
        android:text="Password"
        android:textColor="@color/mainColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/txt_patientPassword"
        android:drawableLeft="@drawable/ic_password"
        android:padding="4dp"
        android:hint="Enter Password"
        android:drawablePadding="5dp"
        android:background="#efefef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btn_patientLogo"
        android:text="Log In"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textAllCaps="false"
        android:background="@color/mainColor"
        android:textColor="#fff"

        android:layout_width="200dp"
        android:layout_height="wrap_content" />




    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView


            android:text="Haven't any account?"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content" />

        <TextView

            android:id="@+id/tv_patientSignIn"


            android:text="Sign In"
            android:textColor="@color/mainColor"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="4dp"

            android:layout_height="wrap_content" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar_patientLogIn"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"/>


</LinearLayout>